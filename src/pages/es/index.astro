---
import { changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import About from "../../components/About.astro";
import Profile from "../../components/Profile.astro";
import Education from "../../components/Education.astro";
import Projects from "../../components/Projects.astro";
import Skills from "../../components/Skills.astro";
import Tools from "../../components/Tools.astro";
import Experience from "../../components/Experience.astro";

changeLanguage("es");
---

<Layout>
  <div class="grid grid-cols-1 gap-5 md:grid-cols-3">
    <Profile />
    <div class="md:col-span-2 md:mr-5">
      <div
        class="bg-white dark:bg-black text-black dark:text-white mt-5 rounded-2xl border border-transparent p-5 md:mt-[5.5rem]"
      >
        <section id="about" class="anchor flex flex-col gap-y-5 py-5">
          <About />
        </section>
        <section id="experience" class="anchor flex flex-col gap-y-5 py-5">
          <Experience />
        </section>
        <section id="education" class="anchor flex flex-col gap-y-5 py-5">
          <Education />
        </section>
        <section id="projects" class="anchor flex flex-col gap-y-5 py-5">
          <Projects />
        </section>
        <section
          id="skills"
          class="anchor flex flex-col gap-y-5 py-5 hover:shadow-sm"
        >
          <Skills />
        </section>

        <section
          id="tools"
          class="anchor flex flex-col gap-y-5 py-5 hover:shadow-sm"
        >
          <Tools />
        </section>
      </div>
    </div>
  </div>
</Layout>

