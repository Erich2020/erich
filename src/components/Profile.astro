---
import i18next, { t } from "i18next";
---

<aside
  class="top-5 flex flex-col items-center justify-center pt-16 rounded-2xl md:sticky md:col-span-1 md:h-screen md:pl-5"
>
  <img
    src="/src/assets/person.png"
    alt="profile photo"
    class="bg-accent-300 dark:bg-accent-900 z-10 h-56 w-auto shadow-xl rounded-3xl p-1"
    loading="lazy"
    width="3840"
    height="3840"
    decoding="async"
  />
  <div
    class="bg-white dark:bg-black text-black dark:text-white bg-background-tertiary shadow-xl mt-[-6rem] w-full max-w-[400px] p-5 relative rounded-2xl"
  >
    <div class="flex flex-col gap-y-1.5">
      <div class="flex flex-col items-center gap-y-4 pb-10 pt-24">
        <h1 class="text-5xl font-bold text-secondary-foreground">
          EricK Lopez
        </h1>
        <h2 class="text-3xl text-secondary-foreground">
          {t("home.profile.position")}
        </h2>
        <p class="text-md text-secondary-foreground text-center">
          {t("home.profile.objective")}
        </p>
        <div class="flex flex-row gap-x-4 pb-3 pt-1">
          <a href="https://github.com/" target="_blank" aria-label="github"
            ><div
              class="bg-white dark:bg-black text-black dark:text-white shadow-sm p-2 rounded-lg flex items-center justify-center"
            >
              <svg
                width="3em"
                height="3em"
                viewBox="0 0 24 24"
                data-icon="github"
              >
                <symbol id="ai:local:github"
                  ><path
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 19c-4.3 1.4-4.3-2.5-6-3m12 5v-3.5c0-1 .1-1.4-.5-2 2.8-.3 5.5-1.4 5.5-6a4.6 4.6 0 0 0-1.3-3.2 4.2 4.2 0 0 0-.1-3.2s-1.1-.3-3.5 1.3a12.3 12.3 0 0 0-6.2 0C6.5 2.8 5.4 3.1 5.4 3.1a4.2 4.2 0 0 0-.1 3.2A4.6 4.6 0 0 0 4 9.5c0 4.6 2.7 5.7 5.5 6-.6.6-.6 1.2-.5 2V21"
                  ></path></symbol
                ><use xlink:href="#ai:local:github"></use>
              </svg>
            </div></a
          >
          <a href="https://linkedin.com/" target="_blank" aria-label="linkedin"
            ><div
              class="bg-white dark:bg-black text-black dark:text-white shadow-sm p-2 rounded-lg flex items-center justify-center"
            >
              <svg
                width="3em"
                height="3em"
                viewBox="0 0 24 24"
                data-icon="linkedin"
              >
                <symbol id="ai:local:linkedin"
                  ><g
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    ><path
                      d="M4 6a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm4 5v5m0-8v.01M12 16v-5"
                    ></path><path d="M16 16v-3a2 2 0 0 0-4 0"></path></g
                  ></symbol
                ><use xlink:href="#ai:local:linkedin"></use>
              </svg>
            </div></a
          >
        </div>
        <div
          class="bg-background-secondary flex w-full flex-col gap-x-7 gap-y-1 p text-secondary-foreground relative rounded-2xl"
        >
          <div class="border-t border-border"></div>
          <div class="flex flex-row items-center gap-x-2">
            <div
              class="bg-background-tertiary shadow-sm p-2 rounded-lg flex items-center justify-center cursor-default"
            >
              <svg
                width="3em"
                height="3em"
                viewBox="0 0 24 24"
                class="h-5 w-5"
                data-icon="location"
              >
                <symbol id="ai:local:location"
                  ><g
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    ><path d="M9 12a3 3 0 1 0 6 0 3 3 0 1 0-6 0"></path><path
                      d="M4 12a8 8 0 1 0 16 0 8 8 0 1 0-16 0m8-10v2m0 16v2m8-10h2M2 12h2"
                    ></path></g
                  ></symbol
                ><use xlink:href="#ai:local:location"></use>
              </svg>
            </div>
            <div class="flex flex-col">
              <span
                class="text-xs uppercase text-accent-600 dark:text-accent-200"
              >
                {t("home.profile.locationLabel")}
              </span>
              <span class="font-bold">{t("home.profile.location")}</span>
            </div>
          </div>
          <div class="border-t border-border"></div>
        </div>
      </div>
    </div>
    <a
      href="https://calendar.app.google/XEBxuj297F5ayfCH8"
      target="_blank"
      class="bg-accent-300 dark:bg-accent-900 hover:shadow-background-tertiary/40 flex flex-row items-center justify-center gap-x-3 rounded-3xl px-4 py-2 text-sm transition-all hover:shadow-md dark:shadow-black/50 hover:dark:shadow-white/30"
    >
      <p class="text-lg font-bold">{t("home.profile.btnConcat")}</p>
    </a>
  </div>
</aside>
