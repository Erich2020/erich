---
import Job from "./Job.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const home = t("home") as any;
const education = home["education"]["content"] as {
  companyName: string;
  position: string;
  period: string;
  activities: string[];
}[];
---

<div
  class="text-xl font-semibold text-secondary-foreground flex flex-row items-center"
>
  <svg
    width="1em"
    height="1em"
    viewBox="0 0 100 100"
    class="text-accent-600 dark:text-accent-200"
    data-icon="round"
  >
    <use xlink:href="#ai:local:round"></use>
  </svg><h1 class="pl-2 font-bold" aria-label="Education">
    {home.education.title}
  </h1>
</div>
<div class="flex flex-col gap-y-3">
  {education.map((edu) => <Job infoJob={edu} />)}
</div>
