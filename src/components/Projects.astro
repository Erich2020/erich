---
import { Image } from "astro:assets";
import i18next, { t } from "i18next";
import portraitImg from "../assets/projects/huevos-frescos/sc.png";

const projects = [
  {
    link: "/pr-test-01",
    name: "Huevos Frescos",
    resume:
      "Apicacion para andoid que te permite consultar la fecha de puesta de un huevo.",
    image: portraitImg,
  },
];
---

<div
  class="text-xl font-semibold text-secondary-foreground flex flex-row items-center"
>
  <svg
    width="1em"
    height="1em"
    viewBox="0 0 100 100"
    class="text-accent-600 dark:text-accent-200"
    data-icon="round"
  >
    <use xlink:href="#ai:local:round"></use>
  </svg><h1 class="pl-2 font-bold" aria-label="Projects">
    {t("home.projects.title")}
  </h1>
</div>
<div class="flex flex-col gap-y-3">
  <div class="flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0">
    {
      projects.map((p) => (
        <a
          class="w-full sm:w-1/2 flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground transition-all hover:border-foreground/25 hover:shadow-sm"
          href={p.link}
        >
          <Image
            src={p.image}
            alt={p.name}
            width="1023"
            height="1023"
            class="h-48 w-full rounded-2xl rounded-bl-none rounded-br-none object-cover"
          />
          <div class="flex flex-col gap-y-0.5 px-5 py-4">
            <h1 class="text-lg font-medium text-secondary-foreground">
              {p.name}
            </h1>
            <h2 class="text-muted-foreground">{p.resume}</h2>
          </div>
        </a>
      ))
    }
  </div>
</div>
